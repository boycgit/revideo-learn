{
  "name": "revideo",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "core:dev": "pnpm --filter @revideo/core run dev",
    "core:build": "pnpm --filter @revideo/core run build",
    "core:bundle": "pnpm --filter @revideo/core run bundle",
    "core:test": "pnpm --filter @revideo/core run test",
    "2d:dev": "pnpm --filter @revideo/2d run dev",
    "2d:build": "pnpm --filter @revideo/2d run build",
    "2d:bundle": "pnpm --filter @revideo/2d run bundle",
    "2d:test": "pnpm --filter @revideo/2d run test",
    "ui:dev": "pnpm --filter @revideo/ui run dev",
    "ui:build": "pnpm --filter @revideo/ui run build",
    "ui:showcase": "pnpm --filter @revideo/ui run showcase",
    "ui:type": "pnpm --filter @revideo/ui run type",
    "template:dev": "pnpm --filter @revideo/template run dev",
    "template:build": "pnpm --filter @revideo/template run build",
    "template:render": "pnpm --filter @revideo/template run render",
    "examples:dev": "pnpm --filter @revideo/examples run dev",
    "examples:build": "pnpm --filter @revideo/examples run build",
    "interactive": "pnpm --filter @revideo/examples run interactive",
    "interactive:build": "pnpm --filter @revideo/examples run build:interactive",
    "renderer:build": "pnpm --filter @revideo/renderer run build",
    "player:dev": "pnpm --filter @revideo/player run dev",
    "player:build": "pnpm --filter @revideo/player run build",
    "vite-plugin:dev": "pnpm --filter @revideo/vite-plugin run dev",
    "vite-plugin:build": "pnpm --filter @revideo/vite-plugin run build",
    "e2e:test": "pnpm --filter @revideo/e2e run test",
    "eslint": "eslint \"**/*.ts?(x)\"",
    "eslint:fix": "eslint --fix \"**/*.ts?(x)\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.1.5",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "vite": "4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,scss}": "prettier --write"
  }
}
